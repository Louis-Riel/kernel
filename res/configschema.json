{
    "title": "Configuration",
    "type": "object",
    "properties": {
        "clienttype": {
            "type": "string",
            "title": "Client Type",
            "enum": [
                "Puller",
                "Tracker"
            ],
            "default": "Puller"
        },
        "devName": {
            "type": "string",
            "title": "Device Name",
            "default": "Puller"
        },
        "deviceId": {
            "type": "string",
            "title": "Device Id"
        },
        "wifiType": {
            "type": "string",
            "enum": [
                "AP",
                "STA",
                "APSTA"
            ],
            "title": "Wifi Type"
        },
        "gps": {
            "title": "GPS",
            "type": "object",
            "properties": {
                "enPin": {
                    "type": "integer",
                    "title": "Enable Pin"
                },
                "rxPin": {
                    "type": "integer",
                    "title": "RX Pin"
                },
                "txPin": {
                    "type": "integer",
                    "title": "TX Pin"
                },
                "pois": {
                    "format": "table",
                    "type": "array",
                    "title": "POIS",
                    "uniqueItems": true,
                    "items": {
                        "type": "object",
                        "properties": {
                            "lat": {
                                "type": "number",
                                "title": "Lattitude"
                            },
                            "lng": {
                                "type": "number",
                                "title": "Longitude"
                            }
                        }
                    }
                }
            }
        },
        "sdcard": {
            "title": "SDCard",
            "type": "object",
            "properties": {
                "ClkPin": {
                    "type": "integer",
                    "title": "Clock Pin"
                },
                "CsPin": {
                    "type": "integer",
                    "title": "Cable Select Pin"
                },
                "MisoPin": {
                    "type": "integer",
                    "title": "Miso Pin"
                },
                "MosiPin": {
                    "type": "integer",
                    "title": "Mosi Pin"
                }
            }
        },
        "pins": {
            "format": "table",
            "type": "array",
            "title": "Pins",
            "uniqueItems": true,
            "items": {
                "type": "object",
                "properties": {
                    "driverFlags": {
                        "type": "integer",
                        "title": "Driver Flags(din = 1,dout = 2,pullup = 4,pulldown = 8,touch = 16)"
                    },
                    "pinName": {
                        "type": "string",
                        "title": "Pin Name"
                    },
                    "pinNo": {
                        "type": "integer",
                        "title": "Pin No"
                    }
                }
            }
        },
        "stations": {
            "format": "table",
            "type": "array",
            "title": "Stations",
            "uniqueItems": true,
            "items": {
                "type": "object",
                "properties": {
                    "ssid": {
                        "type": "string",
                        "title": "SSID"
                    },
                    "password": {
                        "type": "string",
                        "title": "Password"
                    }
                }
            }
        },
        "event": {
            "format": "table",
            "type": "array",
            "title": "Events",
            "uniqueItems": true,
            "items": {
                "type": "object",
                "properties": {
                    "eventBase": {
                        "type": "string",
                        "title": "Event Base"
                    },
                    "eventId": {
                        "type": "string",
                        "title": "Event ID"
                    },
                    "conditions": {
                        "format": "table",
                        "type": "array",
                        "title": "Events",
                        "uniqueItems": true,
                        "items": {
                            "comp": {
                                "type": "object",
                                "properties": {
                                    "otype": {
                                        "type": "string",
                                        "title": "Field Type",
                                        "enum": [
                                            "integer",
                                            "fractional",
                                            "string"
                                        ]
                                    },
                                    "value": {
                                        "type": "string",
                                        "title": "Value"
                                    }
                                }
                            },
                            "operator": {
                                "type": "string",
                                "title": "Operator",
                                "enum": [
                                    "==",
                                    ">",
                                    ">=",
                                    "<",
                                    "<=",
                                    "~="
                                ]
                            },
                            "src": {
                                "type": "object",
                                "properties": {
                                    "otype": {
                                        "type": "string",
                                        "title": "Field Type",
                                        "enum": [
                                            "integer",
                                            "fractional",
                                            "string"
                                        ]
                                    },
                                    "name": {
                                        "type": "string",
                                        "title": "Name"
                                    }
                                }
                            },
                            "boper": {
                                "type": "string",
                                "title": "Binary Operator",
                                "enum": [
                                    "and",
                                    "or"
                                ]
                            }
                        }
                    },
                    "method": {
                        "type": "string",
                        "title": "Method"
                    }
                }
            }
        }
    }
}